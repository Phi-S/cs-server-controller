@using Microsoft.AspNetCore.Mvc.Routing
<nav class="navbar navbar-expand-sm p-0 m-0 pb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link btn-dark @IsCurrent("")" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-dark @IsCurrent("events")" href="/events">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-dark @IsCurrent("server-logs")" href="/server-logs">Server logs</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code
{
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private string IsCurrent(string shouldBeUrl)
    {
        var currentUrl = NavigationManager.Uri.Split("/").Last();
        return shouldBeUrl.Equals(currentUrl) ? "active" : "";
    }

}