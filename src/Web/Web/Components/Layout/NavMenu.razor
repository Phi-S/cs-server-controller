@using Microsoft.AspNetCore.Mvc.Routing
<nav class="navbar navbar-expand-sm p-1 m-0">
    <div class="container-fluid p-0 m-0">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item @IsCurrent("")">
                    <a class="nav-link btn-dark @IsCurrent("")" href="">Home</a>
                </li>
                <li class="nav-item @IsCurrent("chat-commands")">
                    <a class="nav-link btn-dark" href="/chat-commands">Chat commands</a>
                </li>
                <li class="nav-item @IsCurrent("start-settings")">
                    <a class="nav-link btn-dark" href="/start-settings">Start settings</a>
                </li>
                <li class="nav-item @IsCurrent("events")">
                    <a class="nav-link btn-dark" href="/events">Events</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code
{
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private string IsCurrent(string shouldBeUrl)
    {
        var currentUrl = NavigationManager.Uri.Split("/").Last();
        return shouldBeUrl.Equals(currentUrl) ? "active" : "";
    }

}