@page "/"
@inherits HomeRazor
@rendermode InteractiveServer

@if (ServerInfoService.ServerInfo is null)
{
    <LoadingComp/>
}
else
{
    <div class="align-items-center">
        <div class="input-group flex-nowrap justify-content-center">
            <button class="input-group btn btn-outline-info" disabled="@(ServerInfoService.IsServerBusy || ServerInfoService.ServerInfo.ServerStarted)" title="Start server" @onclick="@Start">Start</button>
            <button class="input-group btn btn-outline-info" disabled="@(ServerInfoService.IsServerBusy || ServerInfoService.ServerInfo.ServerStarted == false)" title="Stop server" @onclick="@Stop">Stop</button>
            <button class="input-group btn btn-outline-info" disabled="@ServerInfoService.IsServerBusy" @onclick="Restart">Restart</button>
            @if (ServerInfoService.ServerInfo.ServerUpdatingOrInstalling == false)
            {
                <button
                    class="input-group btn btn-outline-info"
                    disabled="@ServerInfoService.IsServerBusy"
                    title="Update server"
                    @onclick="@StartUpdateOrInstall">
                    Update Server
                </button>
            }
            else
            {
                <button
                    class="input-group btn btn-outline-info"
                    disabled="@ServerInfoService.IsServerBusy"
                    title="Cancel server update"
                    @onclick="@CancelUpdateOrInstall">
                    Cancel update
                </button>
            }

            <button
                class="input-group btn btn-outline-info"
                disabled="@(ServerInfoService.IsServerBusy)"
                title="Update plugins"
                @onclick="@UpdateOrInstallPlugins">
                Update plugins
            </button>

            <button
                class="input-group btn btn-outline-primary dropdown"
                disabled="@(ServerInfoService.IsServerBusy || ServerInfoService.ServerInfo.ServerStarted == false)"
                type="button"
                id="changeMapDropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                title="Changes map. The server needs to be online to do this">
                Change map
            </button>

            <ul class="dropdown-menu" aria-labelledby="changeMapDropdownMenuButton">
                @foreach (var map in ServerInfoService.Maps)
                {
                    <li>
                        <button class="dropdown-item" disabled="@(ServerInfoService.IsServerBusy || ServerInfoService.ServerInfo.ServerStarted == false)" type="button" @onclick="() => ChangeMap(map)">@map</button>
                    </li>
                }
            </ul>
        </div>
        <div class="text-nowrap align-items-center d-flex justify-content-center pb-1 pt-1">
            <div class="input-group justify-content-center d-flex w-100">
                <input class="input-group-text" style="width: 70%" placeholder="Server command" @bind="SendCommandBind" @bind:event="oninput" @onkeydown="OnEnter"/>
                <button class="btn btn-outline-info" disabled="@(ServerInfoService.IsServerBusy || ServerInfoService.ServerInfo.ServerStarted == false)" style="width: 30%" @onclick="SendCommand">Send</button>
            </div>
        </div>
        <div class="overflow-scroll overflow-x-auto rounded-3 border border-2" style="height: 80vh">
            <table class="table table-sm table-striped">
                @foreach (var e in ServerInfoService.AllLogs.OrderByDescending(l => l.TimestampUtc).Take(1000).ToList())
                {
                    <tr class="border-bottom row m-0 p-0" style="width: 100%">
                        <td class="m-0 p-0 ps-1 pe-1" style="max-width: 12rem">@e.TimestampUtc:</td>
                        <td class="m-0 p-0" style="width: calc(100% - 12rem); word-wrap: break-word">@e.Message</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}