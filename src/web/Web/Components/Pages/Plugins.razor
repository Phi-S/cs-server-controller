@page "/plugins"
@inherits PluginsRazor
@rendermode InteractiveServer

<div class="container-fluid m-0 p-0">
    <div class="row justify-content-center text-center px-2 pb-2 flex-nowrap border-bottom border-2">
        <div class="col-9 row">
            <img class="col-4" style="width: 5rem;" src="https://docs.cssharp.dev/images/cssharp.svg" alt=""/>
            <div class="col-8">
                <a class="h4 text-decoration-underline">CounterStrikeSharp</a>
                <div class="d-block end-0" style="font-size: small">@GetCounterStrikeSharpVersion()</div>
                <a href="https://github.com/roflmuffin/CounterStrikeSharp">by roflmuffin on Github</a>
            </div>
        </div>
        <button class="col-3 btn btn-outline-info" @onclick="UpdateOrInstallCounterStrikeSharp">@CounterStrikeSharpUpdateOrInstall()</button>
    </div>
</div>